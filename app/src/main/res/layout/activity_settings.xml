<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#737373">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/exit_settings"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:backgroundTint="#FF0000"
        android:layout_margin="8dp"
        app:fabSize="normal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="38sp"
        android:textColor="#FFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/server_ip"
                android:labelFor="@+id/ip_et" />
            <EditText
                android:id="@+id/ip_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:inputType="text"
                android:hint="123.456.7.8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/server_port"
                android:labelFor="@+id/port_et"/>

            <EditText
                android:id="@+id/port_et"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:breakStrategy="simple"
                android:singleLine="true"
                android:hint="1234"
                android:textAlignment="center"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/use_tcp"
                android:labelFor="@+id/useTcp_toggle"/>

            <ToggleButton
                android:id="@+id/useTcp_toggle"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:textAlignment="center"/>
        </LinearLayout>


    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submit_settings"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="#00FF00"
        android:layout_margin="8dp"
        app:fabSize="normal"/>
</RelativeLayout>